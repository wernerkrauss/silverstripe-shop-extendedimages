{
    "name": "markguinn/silverstripe-shop-extendedimages",
    "description": "Submodule for Silverstripe Shop adding multiple images with a thumbnail gallery and zooming.",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "ecommerce",
        "shop",
        "images",
        "zoom",
        "multiple images"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Guinn",
            "email": "mark@adaircreative.com",
            "homepage": "http://github.com/markguinn"
        }
    ],
    "extra": {
        "installer-name": "shop_extendedimages",
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "expose": [
            "css",
            "javascript",
            "thirdparty"
        ]
    },
    "require": {
        "silverstripe/framework": "^4.0",
        "silvershop/core": "~3.0",
        "bummzack/sortablefile": "^2.0"
    },

    "suggest": {
        "wilr/silverstripe-googlesitemaps":  "Generates a sitemap.xml for better SEO"
    },

    "autoload": {
        "SilverShop\\ExtendedImages": "src"
    }
}
